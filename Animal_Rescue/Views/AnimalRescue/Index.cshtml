@model IEnumerable<Animal_Rescue.Models.AnimalRescue>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<div class="upheading">
    <div>
        <form name="SearchByName" asp-action="SearchByName" method="post" asp-controller="AnimalRescue">
            <div class="search">
                <div class="form-group">
                    <input type="text" for="Name" name="Name" class="form-control opacity-75" placeholder="Search by name or species" style="width: 25%; border: 2px solid lightblue" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Search" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
    <div>
        <form name="DisplayThreeOldest" asp-action="DisplayThreeOldest" method="post" asp-controller="AnimalRescue">
            <div class="form-group">
                <input type="submit" value="3 Oldest" class="btn btn-secondary" />
            </div>
        </form>
    </div>
    <div></div>
    <div></div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PrefixedID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Spayed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Colour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vaccine_Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Identification)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdentificationNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adoption_fee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model!= null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @*Remove animal by ID*@
                        <a asp-action="Delete" asp-controller="AnimalRescue" asp-route-id="@item.ID" class="btn btn-outline-danger">@Html.DisplayFor(modelItem => item.PrefixedID)</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Species)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Spayed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Breed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Colour)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Birthday)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Vaccine_Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Identification)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdentificationNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adoption_fee)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.ID" class="btn btn-secondary btn-sm">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.ID" class="btn btn-secondary btn-sm">Details</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td></td>
                <td><strong><i>@ViewBag.NoResult</i></strong></td>
                <td></td>
            </tr>
        }

    </tbody>
</table>
