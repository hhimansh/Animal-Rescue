@model IEnumerable<Animal_Rescue.Models.AnimalRescue>
@{
    ViewData["Title"] = "3 Oldest in each Species";
}

<h1>@ViewData["Title"]</h1>

<div> 
    <h4><i>If any species is missing, it means it has less than 3 animals under it.</i></h4>
    <table class="table">
        <thead>
            <tr>
                <th> @Html.DisplayNameFor(model => model.Species)</th>
                <th> @Html.DisplayNameFor(model => model.Name)</th>
                <th> @Html.DisplayNameFor(model => model.Breed)</th>
                <th> @Html.DisplayNameFor(model => model.Birthday)</th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Species)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Breed)</td>
                    <td>@Html.DisplayFor(modelItem => item.Birthday)</td>
                </tr>
                }
            }
            else
            {
                <tr>
                    <td><strong><i>@ViewBag.SubHeading</i></strong></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            }
    
        </tbody>
    </table>
</div>